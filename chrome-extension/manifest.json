{
  "manifest_version": 3,
  "name": "Facebook Messenger Chat Scraper",
  "version": "1.0.0",
  "author": "maxwell.d.jiang@gmail.com",
  "description": "Scrape and export Facebook Messenger chat history.",
  "icons": {
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.messenger.com/*"],
      "js": ["main.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
